<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_alohomora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mbm.cse.encarta.Alohomora"


    android:background="@drawable/alohomora">






    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/image"
        android:layout_marginBottom="15dp"
        android:onClick="fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/round_button"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/one"
        android:id="@+id/button1"
        android:layout_marginBottom="75dp"
        android:onClick="level1"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/round"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/twoo"
        android:id="@+id/button2"
        android:layout_marginBottom="135dp"
        android:onClick="level2"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/rounde"
        android:layout_alignParentEnd="true" />








</RelativeLayout>

