<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"


    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mbm.cse.encarta.Contact"
    tools:showIn="@layout/activity_contact">


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-15dp"
        android:id="@+id/button"
        android:background="@drawable/website"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:text="PRANAV CHATURVEDI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/textView12"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/fb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Visit Our Website"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView8"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true" />

    <Button
        android:text="7791064539"
        android:layout_width="wrap_content"
        android:alpha="0.9"
        android:textColor="#00f"
        android:layout_height="wrap_content"
        android:background="#fff"

        android:textSize="20sp"
        android:id="@+id/button7"
        android:textStyle="bold"
        tools:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView12" />

    <TextView
        android:text="ASK YOUR QUERIES"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_above="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="Follow us on facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="ARNAV GAUR"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/textView13"
        android:layout_below="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp" />

    <Button
        android:text="7728857856"
        android:layout_width="wrap_content"
        android:textColor="#00f"
        android:alpha="0.9"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/button8"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/textView13"
        android:layout_alignEnd="@+id/button7" />


</RelativeLayout>
