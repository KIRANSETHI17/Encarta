<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mbm.cse.encarta.Developers"
    android:background="#000">

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/developer"
            android:id="@+id/imageView2" />

        <TextView
            android:text="@string/dept1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="60dp"
            android:textColor="#fff"
            android:textSize="22sp"


            android:id="@+id/textView15" />

        <TextView
            android:text="Kiran Sethi     Anisha Pareek"
            android:textColor="#2c3e50"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp"
            android:id="@+id/textView6" />

        <TextView
            android:text="Sonal Choudhary    "
            android:textColor="#2c3e50"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView7" />

        <TextView
            android:text="@string/dept2"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="Shubham Thakral"
            android:textColor="#2c3e50"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView9"
            android:gravity="center"/>

        <TextView
            android:text="@string/thanks"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="22sp"
            android:id="@+id/textView14"
            />

        <TextView
            android:text="Tarun Malviya "
            android:gravity="center"
            android:textColor="#2c3e50"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView16" />
        <TextView
            android:text="Virender Bhargav "
            android:gravity="center"
            android:textColor="#2c3e50"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/textView17" />
    </LinearLayout>



</ScrollView>


